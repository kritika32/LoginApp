<%-include('header')-%>

    <div class="text-center center-div mt-10" id="login">
        <div class="container w-25 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login System</h2>
                <span mb-2>Log in existing user</span>
                <% if(locals.logout){%>
                    <div class="alert alert-success h-25 text-center">
                        <%=logout%>
                    </div>
                    <%}%>
                        <div>
                            <form action="/route/login" method="POST" class="pt-3">
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="email" name="email">
                                    <small class="form-text text-muted text-left m-2">Register email address</small>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="password" name="password">
                                </div>
                                <button type="submit" class="btn btn-secondary ">Submit</button>
                            </form>
                        </div>
            </div>
        </div>
    </div>
    <%-include('footer')-%>